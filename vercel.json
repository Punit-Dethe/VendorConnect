{
  "version": 2,
  "build": {
    "env": {
      "NPM_COMMAND": "npm"
    }
  },
  "installCommand": "npm install",
  "builds": [
    {
      "src": "packages/backend/src/app.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["packages/backend/dist/**", "packages/shared/dist/**"]
      }
    },
    {
      "src": "packages/frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/backend/src/app.ts"
    },
    {
      "src": "/(.*)",
      "dest": "packages/frontend/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/"
    }
  ],
  "outputDirectory": "dist"
} 