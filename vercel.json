{
  "version": 2,
  "build": {
    "env": {
      "NPM_COMMAND": "npm"
    }
  },
  "installCommand": "npm install",
  "builds": [
    {
      "src": "packages/backend/src/app.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["packages/backend/dist/**", "packages/shared/dist/**"]
      }
    },
    {
      "src": "packages/frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/packages/backend/src/app.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 